            <TextBox
                x:Name="txbRechercherNom"
                FontSize="14"
                >
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFDAA8A8" />
                        <GradientStop Offset="1" Color="#FFEDCDCD" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Label
                Content="Entrez la ville"
                FontSize="14"
                Foreground="White">
