                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF5B4879" />
                        <GradientStop Offset="1" Color="#FF390E7A" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <TextBox x:Name="tbVilleSelectionne" FontSize="14">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFDAA8A8" />
                        <GradientStop Offset="1" Color="#FFEDCDCD" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Label
                Content="Selectionne la fédération"
                FontSize="14"
                Foreground="White"
                Target="{Binding ElementName=cbChoixFederation}">
