            Grid.ColumnSpan="2"
            Width="527"
            Height="162"
            Margin="0,70,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Visibility="Hidden">

            <Label
                HorizontalAlignment="Center"
                Content="Montant total"
                FontSize="45"
                FontWeight="Bold"
                Foreground="Black">
                <Label.Background>
                    <RadialGradientBrush>
                        <GradientStop Offset="0.25" Color="#E5FFFFFF" />
                        <GradientStop Offset="1" Color="#19FFFFFF" />
                    </RadialGradientBrush>
                </Label.Background>
            </Label>
            <Label
                Name="labAfficheMontant"
