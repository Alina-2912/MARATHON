<Window
    x:Class="SAE_201_MARATHON.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_201_MARATHON"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="850"
    Height="500"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/img/background.jpg" Stretch="Fill" />
    </Window.Background>
    <Window.DataContext>
        <local:Coureur x:Name="c" />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="ColumnCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="#FFB47C7C" />
        </Style>
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0.002" Color="#FFB06F6F" />
                        <GradientStop Offset="1" Color="#FFB47C7C" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*" />
            <RowDefinition Height="191*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" Stroke="Black">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#FF083855" />
                    <GradientStop Offset="1" Color="#FF2CADFF" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image
            Grid.Column="2"
            Width="185"
            HorizontalAlignment="Right"
            Source="/img/logo.png"
            Stretch="Fill" />
        <StackPanel
            x:Name="stackPanelConnexion"
            Grid.Row="1"
            Width="284"
            Height="261"
            Margin="0,100,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Visibility="Visible">
            <StackPanel.Background>
                <ImageBrush ImageSource="/img/foret.jpg" />
            </StackPanel.Background>

            <Border
                Margin="0,15,0,0"
                Padding="10,1,10,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF215C2F" />
                        <GradientStop Offset="1" Color="#FF4D965F" />
                    </LinearGradientBrush>
                </Border.Background>
                <Label
                    Content="Connexion"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White" />
            </Border>


            <Label
                Height="29"
                Margin="0,15,0,0"
                Content="Login"
                FontSize="14">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0.2" Color="#FFA0CDFF" />
                        <GradientStop Offset="1" Color="#FF3A97FF" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <TextBox
                x:Name="tbLogin"
                Height="31"
                Background="#FFA8FBE6"
                FontSize="14"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Height="30"
                Content="Mot de passe"
                FontSize="14">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0.2" Color="#FFA0CDFF" />
                        <GradientStop Offset="1" Color="#FF3A97FF" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <PasswordBox
                x:Name="pswrdBox"
                Height="34"
                Background="#FFA8FBE6"
                FontSize="14" />
            <Button
                Name="butConnexion"
                Width="103"
                Height="37"
                Margin="0,9,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="ButtonConnexion"
                Content="Se connecter"
                Cursor="Hand"
                FontSize="15"
                FontWeight="Bold"
                Foreground="White">
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF0F716F" />
                        <GradientStop Offset="1" Color="#FF11C5C0" />
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>

        <Label
            Name="lbTitreSelectionnercourse"
            Grid.Row="1"
            Height="80"
            Margin="20,10,0,350"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Sélectionner une course"
            FontSize="34"
            FontWeight="Bold"
            Foreground="Black"
            Visibility="Hidden" />

        <Label
            Name="lbTitreRechercherCoureur"
            Grid.Row="1"
            Height="80"
            Margin="20,0,0,620"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Rechercher un coureur"
            FontSize="34"
            FontWeight="Bold"
            Foreground="Black"
            Visibility="Hidden" />

        <Label
            Name="lbTitreEnvoiSms"
            Grid.Row="1"
            Height="80"
            Margin="20,20,0,350"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.ColumnSpan="2"
            Content="Evoyer les informations de la course a des amis"
            FontSize="36"
            FontWeight="Bold"
            Foreground="Black"
            Visibility="Hidden" />

        <Border
            x:Name="RechercheCourseBorder"
            Grid.Row="1"
            Margin="75,0,75,0"
            Padding="20,20,20,10"
            VerticalAlignment="Center"
            CornerRadius="15"
            Visibility="Hidden">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#CC84138E" />
                    <GradientStop Offset="1" Color="#CCD51515" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel
                x:Name="RechercheCourse"
                Grid.Row="1"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                Visibility="Visible">
                <Label
                    Margin="0,5,0,0"
                    Content="S_électionner la course"
                    FontSize="16"
                    Foreground="White"
                    Target="{Binding ElementName=choixCourse}" />
                <ComboBox
                    x:Name="choixCourse"
                    FontSize="14"
                    SelectionChanged="ContenuMontant">
                    <ComboBoxItem Name="choixMarathon" Content="Marathon" />
                    <ComboBoxItem Name="choixSemiMarathon" Content="Semi Marathon" />
                    <ComboBoxItem Name="choix10km" Content="10 Km" />
                    <ComboBoxItem Name="choixDuo" Content="Duo" />
                    <ComboBoxItem Name="choixRelais" Content="Relais" />
                </ComboBox>
                <Label
                    Content="Sélectionner la date"
                    FontSize="16"
                    Foreground="White"
                    Target="{Binding ElementName=choixDate}" />
                <DatePicker x:Name="choixDate" FontSize="14" />
                <Grid Height="74" HorizontalAlignment="Stretch">
                    <Button
                        Width="80"
                        Height="30"
                        Margin="180,22,25,22"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="Button_Suivant_1"
                        Content="Suivant"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        IsDefault="True">
                        <Button.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FF232323" />
                                <GradientStop Offset="1" Color="#FF878787" />
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                        <Button.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF390E7A" />
                                <GradientStop Offset="1" Color="#FF5B4879" />
                            </RadialGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button
