                        <GradientStop Color="#FFDAA8A8" />
                        <GradientStop Offset="1" Color="#FFEDCDCD" />
                    </LinearGradientBrush>
                </ComboBox.Background>
                <ComboBoxItem Content="Fédération Française Athlétisme" />
                <ComboBoxItem Content="Fédération Française Cyclisme" />
                <ComboBoxItem Content="Fédération Française Tennis" />
                <ComboBoxItem Content="Fédération Française Golf" />
            </ComboBox>
            <Label
                Content="Selectionner les coureurs"
                FontSize="14"
                Foreground="White">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF5B4879" />
                        <GradientStop Offset="1" Color="#FF390E7A" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>


            <DataGrid
             x:Name="dgCoureurs"
            MinHeight="150"
            AutoGenerateColumns="False"
            IsReadOnly="False"
            ItemsSource="{Binding}" 
                Height="173">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="30" Binding="{Binding NumCoureur}" Header="Id" />
                    <DataGridTextColumn Width="80" Binding="{Binding NomCoureur}" Header="Nom" />
                    <DataGridTextColumn Width="80" Binding="{Binding PrenomCoureur}" Header="Prenom" />
                    <DataGridTextColumn Width="80" Binding="{Binding VilleCoureur}" Header="Ville" />
                    <DataGridTextColumn Width="80" Binding="{Binding NumFederation}" Header="Federation" />
                    <DataGridTextColumn Width="80" Binding="{Binding CodeClub}" Header="Code club" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid Height="60" HorizontalAlignment="Stretch" Width="328">
                <Button
                    Height="30"
                    Margin="169,9,83,21"
                    Click="Button_Suivant_2"
                    Visibility="Hidden"
                    Content="Suivant" FontSize="14" />

                <Button
                    Width="75"
                    Height="30"
                    Margin="10,9,249,21"
                    Visibility="Hidden"
                    Click="Button_Precedent_1"
                    Content="Precedent" FontSize="14" />
                <Button
                    Height="30"
                    Margin="109,9,189,21"
                    Click="Button_Rechercher"
                    Content="" FontSize="14">
                    <Button.Background>
                        <ImageBrush ImageSource="/img/rechercherImage.jpg"/>
                    </Button.Background>
                </Button>
            </Grid>




            <Grid
                Height="80"
                Margin="0,10,0,0"
                HorizontalAlignment="Stretch">

                <Button
                    Width="100"
                    Height="40"
                    Margin="220,15,30,15"
                    Click="Button_Suivant_2"
                    Content="Suivant"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.BorderBrush>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF232323" />
                            <GradientStop Offset="1" Color="#FF878787" />
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                    <Button.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF390E7A" />
                            <GradientStop Offset="1" Color="#FF5B4879" />
                        </RadialGradientBrush>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="3,3,3,3"
                                CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>



                <Button
                    Width="100"
                    Height="40"
                    Margin="30,15,220,15"
                    Click="Button_Precedent_1"
                    Content="Precedent"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.BorderBrush>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF232323" />
                            <GradientStop Offset="1" Color="#FF878787" />
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                    <Button.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF390E7A" />
                            <GradientStop Offset="1" Color="#FF5B4879" />
                        </RadialGradientBrush>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="3,3,3,3"
                                CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

            </Grid>
        </StackPanel>
