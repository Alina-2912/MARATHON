            x:Name="SelectionCoureurs"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Width="360"
            Height="285"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden">

            <Border CornerRadius="10,10,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF5B4879" />
                        <GradientStop Offset="1" Color="#FF390E7A" />
                    </LinearGradientBrush>
                </Border.Background>
                <Label
                    
                    Content="Sélectionner le coureur"
                    FontSize="14"
                    Foreground="White" />
            </Border>

            <ComboBox x:Name="cbCoureurs" FontSize="14" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding NumCoureur}" />
                            <TextBlock Text=" - " />
                            <TextBlock Text="{Binding NomCoureur}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label
                Content="Sélectionner la date"
