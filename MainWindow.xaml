                        Height="30"
                        Margin="25,22,180,22"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="Button_Deconnexion"
                        Content="Se deconnecter"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Red">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <StackPanel
            x:Name="RechercheCoureurs"
            Grid.Row="1"
            Margin="70,120,100,0"
            Visibility="Hidden">

            <Border CornerRadius="10,10,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF5B4879" />
                        <GradientStop Offset="1" Color="#FF390E7A" />
                    </LinearGradientBrush>
                </Border.Background>
                <Label
                    
                    Content="Entrez le nom"
                    FontSize="14"
                    Foreground="White" />
