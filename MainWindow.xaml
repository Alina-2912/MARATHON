                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF5B4879" />
                        <GradientStop Offset="1" Color="#FF390E7A" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <DatePicker FontSize="14" />
            <Label
                Content="Saisir des numéros de téléphones d’amis (pas obligatoire) "
                FontSize="14"
                Foreground="White">
                <Label.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF5B4879" />
                        <GradientStop Offset="1" Color="#FF390E7A" />
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
            <TextBox Margin="0,3,0,0" FontSize="14">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFDAA8A8" />
                        <GradientStop Offset="1" Color="#FFEDCDCD" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <TextBox Margin="0,3,0,0" FontSize="14">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFDAA8A8" />
                        <GradientStop Offset="1" Color="#FFEDCDCD" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <TextBox Margin="0,3,0,0" FontSize="14">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFDAA8A8" />
                        <GradientStop Offset="1" Color="#FFEDCDCD" />
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Grid Height="74" HorizontalAlignment="Stretch">
                <Button
                    Width="75"
                    Height="30"
                    Margin="220,7,43,10"
                    Click="Button_Suivant_3"
                    Content="Suivant"
